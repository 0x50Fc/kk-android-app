<layout width="100%" height="100%">
    <canvas width="100%" height="100%" background-color="#1d2228"></canvas>
    <layout width="100%" height="100%" layout="flow">
        <touch width="20%" height="100%" kk-status="match.status" class="bottombar" action="selected" value="match">
            <text width="auto" height="auto" font="14dp" top="8dp" left="auto" right="auto">意向</text>
            <text width="auto" height="auto" font="9dp" top="auto" bottom="8dp" left="auto" right="auto">Match</text>
        </touch>
        <touch width="20%" height="100%" kk-status="news.status" class="bottombar" action="selected" value="news">
            <text width="auto" height="auto" font="14dp" top="8dp" left="auto" right="auto" action="selected" value="news">资讯</text>
            <text width="auto" height="auto" font="9dp" top="auto" bottom="8dp" left="auto" right="auto">News</text>
        </touch>
        <touch width="20%" height="100%" kk-status="market.status" class="bottombar" action="selected" value="market">
            <text width="auto" height="auto" font="14dp" top="8dp" left="auto" right="auto" action="selected" value="markets">行情</text>
            <text width="auto" height="auto" font="9dp" top="auto" bottom="8dp" left="auto" right="auto">Markets</text>
        </touch>
        <touch width="20%" height="100%" kk-status="portfolio.status" class="bottombar" action="selected" value="portfolio">
            <text width="auto" height="auto" font="14dp" top="8dp" left="auto" right="auto" action="selected" value="portfolio">自选</text>
            <text width="auto" height="auto" font="9dp" top="auto" bottom="8dp" left="auto" right="auto">Portfolio</text>
        </touch>
        <touch width="20%" height="100%" kk-status="me.status" class="bottombar" action="selected" value="me">
            <text width="auto" height="auto" font="14dp" top="8dp" left="auto" right="auto" action="selected" value="me">个人</text>
            <text width="auto" height="auto" font="9dp" top="auto" bottom="8dp" left="auto" right="auto">Me</text>
        </touch>
    </layout>
</layout>
